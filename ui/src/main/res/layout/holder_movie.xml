<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="?android:attr/selectableItemBackground"
    android:paddingHorizontal="24dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivMovieLogo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Logo" />

    <TextView
        android:id="@+id/tvMovieReleaseYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/tvMovieTitle"
        app:layout_constraintEnd_toStartOf="@id/cbMovieFavorite"
        app:layout_constraintStart_toEndOf="@id/ivMovieLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="2008" />

    <TextView
        android:id="@+id/tvMovieTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@id/tvMovieRating"
        app:layout_constraintEnd_toEndOf="@id/tvMovieReleaseYear"
        app:layout_constraintStart_toStartOf="@id/tvMovieReleaseYear"
        app:layout_constraintTop_toBottomOf="@id/tvMovieReleaseYear"
        tools:text="The Dark Knight" />

    <TextView
        android:id="@+id/tvMovieRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@drawable/ic_star"
        app:drawableTint="@color/yellow"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvMovieReleaseYear"
        app:layout_constraintStart_toStartOf="@id/tvMovieReleaseYear"
        app:layout_constraintTop_toBottomOf="@id/tvMovieTitle"
        tools:text="5 / 5" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/cbMovieFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/selector_bg_favorite"
        android:padding="8dp"
        android:checked="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
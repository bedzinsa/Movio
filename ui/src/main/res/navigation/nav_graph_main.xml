<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.arunasbedzinskas.movio.ui.screens.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/sf_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/sf_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.arunasbedzinskas.movio.ui.screens.login.SignUpFragment"
        tools:layout="@layout/fragment_sign_up">

        <action
            android:id="@+id/suf_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.arunasbedzinskas.movio.ui.screens.home.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/hf_to_searchMoviesFragment"
            app:destination="@id/searchMoviesFragment" />

        <action
            android:id="@+id/hf_to_MovieDetailsFragment"
            app:destination="@id/movieDetailsFragment">

            <argument
                android:name="movieId"
                app:argType="long"
                app:nullable="false" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/searchMoviesFragment"
        android:name="com.arunasbedzinskas.movio.ui.screens.search.SearchMoviesFragment"
        tools:layout="@layout/fragment_search_movies">

        <action
            android:id="@+id/smf_to_MovieDetailsFragment"
            app:destination="@id/movieDetailsFragment">

            <argument
                android:name="movieId"
                app:argType="long"
                app:nullable="false" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.arunasbedzinskas.movio.ui.screens.details.MovieDetailsFragment">

        <argument
            android:name="movieId"
            app:argType="long"
            app:nullable="false" />
    </fragment>
</navigation>
